case "$1" in
  start)
    echo "Checking for RAUC update bundle..."
    if [ -f /mnt/sdcard/update.raucb ]; then
      echo "Installing update bundle"
      rauc install /mnt/sdcard/update.raucb
      if [ $? -eq 0 ]; then
        echo "Update successful, marking good"
        rauc status mark-good
        reboot -f
      else
        echo "Update failed"
      fi
    fi
    ;;
  *)
    echo "Usage: $0 start"
    exit 1
    ;;
esac
